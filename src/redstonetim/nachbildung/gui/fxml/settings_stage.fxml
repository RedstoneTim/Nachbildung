<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<Stage fx:id="stage" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="redstonetim.nachbildung.setting.SettingsStage">
    <scene>
        <Scene>
            <VBox minWidth="260.0">
                <GridPane fx:id="settingsGridPane" alignment="CENTER" hgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                </GridPane>
                <GridPane alignment="CENTER" hgap="10.0" prefHeight="70.0" prefWidth="260.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="125.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="125.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="15.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Separator prefWidth="200.0" GridPane.columnSpan="2">
                        <GridPane.margin>
                            <Insets/>
                        </GridPane.margin>
                    </Separator>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            onAction="#onResetToDefaultButton" text="Reset to default" GridPane.columnSpan="2"
                            GridPane.rowIndex="1"/>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSaveButton"
                            text="Save" GridPane.rowIndex="2"/>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCancelButton"
                            text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>
        </Scene>
    </scene>
</Stage>
